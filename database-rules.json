{
  "rules": {
    ".read": "auth.token.admin === true",
    ".write": "auth.token.admin === true",
    "admins": {
      ".read": "false", 
      ".write": "false", 
      "$index": {
        "email": {
          ".validate": "newData.isString()"
        }
      }
    },
    "feed": {
      "$uid": {
        ".read": "auth.uid === $uid",
        ".write": "auth.uid === $uid",
        "$postId": {
          ".validate": "newData.val() === true && newData.parent().parent().parent().child('posts').child($postId).exists()"
        }
      }
    },
    "posts": {
      ".read": true,
      ".indexOn": ["author/uid", "timestamp"],
      "$postId": {
        ".write": "!data.exists() || data.exists() && auth.uid === data.child('author').child('uid').val()",
        ".validate": "newData.child('author').child('uid').exists() && newData.child('text').exists()",
        "text": {
          ".validate": "newData.isString() && newData.val().length < 2000"
        },
        "timestamp": {
          ".validate": "newData.val() === now"
        },
        "client": {
          ".validate": "newData.val() === 'web' || newData.val() === 'ios' || newData.val() === 'android'"
        },
        "sanitized": {
          ".validate": "false"
        },
        "moderated": {
          ".validate": "false"
        },
        "author": {
          "uid": {
            ".validate": "auth.uid === newData.val()"
          },
          "full_name": {
            ".validate": "auth.token.name === newData.val() || (auth.token.name === null && newData.val() === 'Anonymous')"
          },
          "profile_picture": {
            ".validate": "true"
          }
        }
      }
    },
    "comments": {
      ".read": true,
      "$postId": {
        ".indexOn": "author/uid",
        ".write": "!newData.exists() && auth.uid === root.child('posts').child($postId).child('author').child('uid').val() && !newData.parent().parent().child('posts').child($postId).exists()",
        ".validate": "root.child('posts').child($postId).exists()",
        "$commentId": {
          ".write": "(!data.exists() || data.exists() && auth.uid === data.child('author').child('uid').val()) && (root.child('blocked').child(auth.uid).child(root.child('posts').child($postId).child('author').child('uid').val()).val() !== true)",
          "text": {
            ".validate": "newData.isString() && newData.val().length < 2000"
          },
          "sanitized": {
            ".validate": "false"
          },
          "moderated": {
            ".validate": "false"
          },
          "timestamp": {
            ".validate": "newData.val() === now"
          },
          "author": {
            "uid": {
              ".validate": "auth.uid === newData.val()"
            },
            "full_name": {
              ".validate": "auth.token.name === newData.val() || (auth.token.name === null && newData.val() === 'Anonymous')"
            },
            "profile_picture": {
              ".validate": "true"
            },
            "$other": {
              ".validate": false
            }
          },
          "$other": {
            ".validate": false
          }
        }
      }
    },
    "likes": {
      ".read": true,
      "$postId": {
        ".write": "!newData.exists() && auth.uid === root.child('posts').child($postId).child('author').child('uid').val() && !newData.parent().parent().child('posts').child($postId).exists()",
        ".validate": "root.child('posts').child($postId).exists()",
        "$uid": {
          ".write": "auth.uid === $uid",
          ".validate": "newData.val() === now"
        }
      }
    },
    "followers": {
      ".read": true,
      "$followedUid": {
        "$followerUid": {
          ".write": "auth.uid === $followerUid",
          ".validate": "newData.val() === true && newData.parent().parent().parent().child('people').child($followerUid).child('following').child($followedUid).exists()"
        }
      }
    },
    "people": {
      ".indexOn": ["_search_index/full_name", "_search_index/reversed_full_name"],
      ".read": true,
      "$uid": {
        ".write": "auth.uid === $uid",
        "full_name": {
          ".validate": "auth.token.name === newData.val() || (auth.token.name === null && newData.val() === 'Anonymous')"
        },
        "profile_picture": {
          ".validate": "true"
        },
        "posts": {
          "$postId": {
            ".validate": "newData.val() === true && newData.parent().parent().parent().parent().child('posts').child($postId).exists()"
          }
        },
        "_search_index": {
          "full_name": {
            ".validate": "newData.isString()"
          },
          "reversed_full_name": {
            ".validate": "newData.isString()"
          }
        },
        "following": {
          "$followedUid": {
            ".validate": "newData.parent().parent().parent().parent().child('followers').child($followedUid).child($uid).val() === true"
          }
        }
      }
    },
    "blocking": {
      "$blockerUid": {
        ".write": "auth.uid === $blockerUid",
        ".read": "auth.uid === $blockerUid",
        "$blockedUid": {
          ".read": "auth.uid === $blockedUid",
          ".validate": "newData.val() === true && newData.parent().parent().parent().child('blocked').child($blockedUid).child($blockerUid).exists()"
        }
      }
    },
    "blocked": {
      "$blockedUid": {
        ".read": "auth.uid === $blockedUid",
        "$blockerUid": {
          ".read": "auth.uid === $blockerUid",
          ".write": "auth.uid === $blockerUid",
          ".validate": "newData.val() === true && newData.parent().parent().parent().child('blocking').child($blockerUid).child($blockedUid).exists()"
        }
      }
    },
    "postFlags": {
      "$postId": {
        ".validate": "root.child('posts').child($postId).exists()",
        "$uid": {
          ".write": "auth.uid === $uid",
          ".read": "auth.uid === $uid",
          ".validate": "newData.val() === true"
        }
      }
    },
    "commentFlags": {
      "$postId": {
        ".validate": "root.child('posts').child($postId).exists()",
        "$commentId": {
          ".validate": "root.child('comments').child($postId).child($commentId).exists()",
          "$uid": {
            ".write": "auth.uid === $uid",
            ".read": "auth.uid === $uid",
            ".validate": "newData.val() === true"
          }
        }
      }
    },
    "privacy": {
      "$uid": {
        ".write": "auth.uid === $uid",
        ".read": "auth.uid === $uid",
        "data_processing": {
          ".validate": "newData.isBoolean()"
        },
        "content": {
          ".validate": "newData.isBoolean()"
        },
        "social": {
          ".validate": "newData.isBoolean()"
        },
        "$other": {
          ".validate": "false"
        }
      }
    },
    "$other": {
      ".validate": false
    }
  }
}